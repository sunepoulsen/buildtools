#-----------------------------------------------------------------------------------------------
#			            Commands
#-----------------------------------------------------------------------------------------------

DOCTOOL=doxygen
RM=rm -rf

#-----------------------------------------------------------------------------------------------
#			            Files & Paths
#-----------------------------------------------------------------------------------------------

APIPATH=api
DOXYGEN_FILE=@DOXYGEN_FILE@

#-----------------------------------------------------------------------------------------------
#			            Rules
#-----------------------------------------------------------------------------------------------
all: @PROJECT_NAME@-api

@PROJECT_NAME@-api:
	$(DOCTOOL) $(DOXYGEN_FILE)

clean:
	$(RM) $(APIPATH) \
    $(RM) *.log

